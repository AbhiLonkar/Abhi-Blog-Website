<%- include("partials/header"); -%>

<h1 class="heading">Home</h1>
<p><%=startingContent%></p>

<%postHomeArray.forEach(function(item){%>
    <h1><%=item.title%></h1>
    <% if (item.content.length>100) { %>
    <p>
        <%=item.content.substring(0,100) + "... " %><a href="posts/<%= item.title %>">Read More</a>
    </p>
    <% } else { %>
        <p><%= item.content %></p>
    <% } %> 
<%});%> 
<%- include("partials/footer"); -%>
